<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <declare-styleable name="ExtendedFloatingActionLayout" tools:ignore="ResourceName">
        <!-- Elevation for the ExtendedFloatingActionButton. -->
        <attr name="elevation" />
        <!-- Motion spec for show animation. This should be a MotionSpec resource. -->
        <attr name="showMotionSpec" />
        <!-- Motion spec for hide animation. This should be a MotionSpec resource. -->
        <attr name="hideMotionSpec" />
        <!-- Motion spec for extend animation. This should be a MotionSpec resource. -->
        <attr name="extendMotionSpec" format="reference" />
        <!-- Motion spec for shrink animation. This should be a MotionSpec resource. -->
        <attr name="shrinkMotionSpec" format="reference" />
        <!-- FAB size when collapsed. -->
        <attr name="collapsedSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ExtendedFloatingActionLayout_Behavior_Layout" tools:ignore="ResourceName">
        <!-- Whether the extended FAB should automatically hide when there is no space for it. -->
        <attr name="behavior_autoHide" />
        <!-- Whether the extended FAB should automatically shrink when there is no space for it. -->
        <attr name="behavior_autoShrink" format="boolean" />
    </declare-styleable>

    <declare-styleable name="IconFontView" tools:ignore="ResourceName">
        <attr name="fontAsset" format="string" />
        <attr name="android:font" />
        <attr name="android:textColor" />
        <attr name="android:text" />
    </declare-styleable>

    <declare-styleable name="OutlineClipImageView" tools:ignore="ResourceName">
        <attr name="olciv_outlineType" format="enum">
            <!-- Default, background drawable-driven outline. -->
            <enum name="background" value="0" />
            <!-- No outline provider. -->
            <enum name="none" value="1" />
            <enum name="oval" value="2" />
            <enum name="cornerRadius" value="3" />
        </attr>
        <attr name="olciv_cornerRadius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="BorderImageView" tools:ignore="ResourceName">
        <attr name="biv_borderWidth" format="dimension" />
        <attr name="biv_borderColor" format="color" />
    </declare-styleable>
</resources>
